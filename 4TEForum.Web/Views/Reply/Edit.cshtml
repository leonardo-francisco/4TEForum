@model _4TEForum.Web.Models.Reply.PostReplyModel

<h1> Edit Reply | @Model.PostTitle</h1>

<form asp-action="EditReply" method="post" id="editPostForm">
    <div class="form-group" hidden>
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReplyContent">Reply Content</label>
        <textarea asp-for="ReplyContent" rows="20" class="form-control"></textarea>
        <span asp-validation-for="ReplyContent" class="text-danger"></span>
    </div>
    <input asp-for="PostId" type="hidden" />
    <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
        Edit Reply
    </button>
</form>
